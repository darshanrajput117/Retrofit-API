<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners
        android:bottomRightRadius="@dimen/_20sdp"
        android:bottomLeftRadius="@dimen/_20sdp"
        android:topRightRadius="@dimen/_20sdp"
        android:topLeftRadius="@dimen/_20sdp"
        android:radius="@dimen/_1sdp" />

    <gradient
        android:angle="45"
        android:centerColor="@color/white"
        android:type="radial" />

    <!--If your shape requires only one solid color-->
    <!--<solid
        android:color="#FFFFFF" />-->

    <size
        android:width="@dimen/_100sdp"
        android:height="@dimen/_40sdp" />

    <!--Use android:dashWidth="2dp" and android:dashGap="2dp"
    to add dashes to your stroke-->
    <stroke
        android:width="@dimen/_1sdp"
        android:color="#EF2821" />

    <padding
         android:left="@dimen/_10sdp"
         android:top="@dimen/_10sdp"
         android:right="@dimen/_10sdp"
         android:bottom="@dimen/_10sdp" />

</shape>